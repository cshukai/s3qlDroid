<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.mathbiol.s3qldroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock" >
        <activity
            android:name="org.mathbiol.s3qldroid.FileUpload"
            android:label="@string/title_activity_file_upload"
            android:uiOptions="splitActionBarWhenNarrow" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.EDIT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.mathbiol.s3qldroid.CameraPreview"
            android:label="@string/title_activity_camera_preview"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.SYNC" />

                <category android:name="android.intent.category.GADGET" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.mathbiol.s3qldroid.S3DBC"
            android:label="@string/title_activity_s3_dbc" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.mathbiol.s3qldroid.FunctionList"
            android:label="@string/title_activity_function_list" >
        </activity>
        <activity
            android:name="org.mathbiol.s3qldroid.InsertDemo"
            android:label="@string/title_activity_insert_demo" >
        </activity>
        <activity
            android:name="org.mathbiol.s3qldroid.SelectDemo"
            android:label="@string/title_activity_select_demo" >
        </activity>
        <activity
            android:name="org.mathbiol.s3qldroid.MultiMediaProceesing"
            android:label="@string/title_activity_multi_media_proceesing" >
        </activity>
        <activity
            android:name="org.mathbiol.s3qldroid.DbViewer"
            android:label="@string/title_activity_db_viewer" >
        </activity>
    </application>

</manifest>