<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectDemo" >

    <Button
        android:id="@+id/submit4selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="159dp"
        android:text="Submit" />
    
    
    <EditText
        android:id="@+id/item_id_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/submit4selection"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/item_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/item_id_input"
        android:layout_alignLeft="@+id/item_id_input"
        android:layout_marginBottom="31dp"
        android:layout_marginLeft="28dp"
        android:text="item id:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>